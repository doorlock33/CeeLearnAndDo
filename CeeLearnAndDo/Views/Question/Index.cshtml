@model IEnumerable<CeeLearnAndDo.Models.Question>

@{
    ViewBag.Title = "Vraagbaak";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Stel een vraag of bekijk beantwoorde vragen!</h1>
            <ol class="breadcrumb">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="active">Vraagbaak</li>
            </ol>
        </div>
    </div><!-- /.row -->
    <div class="row">
        <div class="btn btn-default">
            @Html.ActionLink("Create New", "Create")
        </div>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                if (item.Approved == true)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("Details", "Question", new { id = item.Id })">@Html.DisplayFor(modelItem => item.Title)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedAt)
                        </td>
                    </tr>
                }
            }

        </table>
    </div>
</div>