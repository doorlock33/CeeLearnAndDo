@model IEnumerable<CeeLearnAndDo.Models.Reference>

@{
    ViewBag.Title = "Referenties";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Bekijk onze referenties!</h1>
            <ol class="breadcrumb">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="active">Referenties</li>
            </ol>
        </div>
    </div><!-- /.row -->
    <div class="row">
        <div class="col-sm-12">
            @foreach (var item in Model)
            {
                <h3>@Html.DisplayFor(modelItem => item.Title)</h3>                 
                    <div>
                        @Html.DisplayFor(modelItem => item.Content)
                    </div>
                    <div>
                        @Html.DisplayFor(modelItem => item.Date)
                    </div>                     
            }
        </div>
    </div><!-- /.row -->
</div>